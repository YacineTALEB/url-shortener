<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ("../partials/head") %>
  </head>
  <body>
    <main>
      <div class="h-screen w-full bg-indigo-200 flex justify-center items-center">
        <form
          class="w-full max-w-md bg-white flex flex-col py-6 px-8 rounded-lg shadow-lg"
          action="/"
        >
          <div class="w-full flex mb-3 shadow rounded">
            <label class="text-gray-700 border border-gray-300 bg-gray-300 rounded-l py-1 px-3" for="">From</label>
            <input
              class="w-full text-gray-700 border border-gray-300 rounded-r focus:outline-none focus:shadow-outline py-1 px-3"
              type="text"
              name="url"
              disabled
              value=<%- serverUri %>/<%- redirect.slug %>
            />
          </div>
          <div class="w-full flex mb-3 shadow rounded">
            <label class="text-gray-700 border border-gray-300 bg-gray-300 rounded-l py-1 px-3" for="">To</label>
            <input
              class="w-full text-gray-700 border border-gray-300 rounded-r focus:outline-none focus:shadow-outline py-1 px-3"
              type="text"
              name="slug"
              disabled
              value=<%- redirect.url %>
            />
          </div>

          <p class="text-red-500 font-bold text-sm italic">Please enter a valid URL.</p>

          <div class="flex justify-between items-center mt-4">
            <button
              class="bg-blue-500 hover:bg-blue-700 text-white font-bold rounded py-2 px-4"
              type="submit"
            >
              Shorten Another URL
            </button>
          </div>
        </form>
      </div>
    </main>
  </body>
</html>
